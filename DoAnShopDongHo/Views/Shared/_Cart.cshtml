@model List<DoAnShopDongHo.Models.CartItem>

<!-- shopping card -->
<div class="shopping-cart" style="display: none;">
    <div class="shopping-cart-header">
        <i class="fa fa-shopping-cart cart-icon"></i><span class="badge">@Model.Count</span>
        <div class="shopping-cart-total">
            <span class="lighter-text">Total:</span>
            <span class="main-color-text">$2,229.97</span>
        </div>
    </div> <!--end shopping-cart-header -->
    <ul class="shopping-cart-items">
        @foreach (var item in Model)
        {
            <li class="clearfix">
                <img src="@item.product.Image" alt="item1" />
                <span class="item-name">@item.product.Name</span>
                @if (item.product.PromotionPrice == null)
                {
                    <span class="item-price">@item.product.Price</span>
                }
                else
                {
                    <span class="item-price">@item.product.PromotionPrice</span>
                }

                <span class="item-quantity">Số lượng: @item.Quantity</span>
        </li>
        }
    </ul>
    <a href="/Cart" class="button">Mua Ngay</a>
